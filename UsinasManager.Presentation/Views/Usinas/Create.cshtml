@model UsinasManager.Presentation.ViewModels.UsinaViewModel

@{
	ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="center-in-page">
		<p class="default-title">Cadastro de usinas</p>
		<hr />

		@Html.ValidationSummary(true, "", new { @class = "text-red" })

		<div class="row vertical-center">
			<div class="col-3">
				@Html.LabelFor(model => model.Ativo, new { @class = "font-weight-500" })
			</div>
			<div class="col-9">
				<label class="switch">
					<input type="checkbox" id="Ativo" name="Ativo" value="true" checked>
					<span class="slider round"></span>
				</label>
			</div>
			@Html.ValidationMessageFor(model => model.Ativo, "", new { @class = "text-red" })
		</div>

		<div class="row vertical-center">
			<div class="col-3">
				@Html.LabelFor(model => model.FornecedorId, "Fornecedor", new { @class = "font-weight-500" })
			</div>
			<div class="col-9">
				@Html.DropDownListFor(model => model.FornecedorId, (IEnumerable<SelectListItem>)ViewBag.FornecedorId, string.Empty, new { @class = "input-default" })
				@Html.ValidationMessageFor(model => model.FornecedorId, "", new { @class = "text-red" })
			</div>
		</div>
		<div class="row vertical-center">
			<div class="col-3">
				@Html.LabelFor(model => model.UC, new { @class = "font-weight-500" })
			</div>
			<div class="col-9">
				@Html.EditorFor(model => model.UC, new { htmlAttributes = new { @class = "input-default" } })
				@Html.ValidationMessageFor(model => model.UC, "", new { @class = "text-red" })
			</div>
		</div>

		<div class="fr padding-15">
			<button type="submit" class="button">Salvar</button>
			@Html.ActionLink("Fechar", "Index", "Usinas", new { @class = "button bg-red" })
		</div>
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")

	<script>
		$(function () {
			$("#Ativo").click(function () {
				$(this).val() == "true" ? $(this).val("false") : $(this).val("true");
			})
      });
	</script>
}
